<!doctype html>
<html lang="">
<head>
    <!-- meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1">
    <!-- /meta -->
    @{
        string pageTitle = @ViewBag.Title ?? "Hovis Application";
    }
    <title>@pageTitle</title>
    @Styles.Render("~/Content/css");

    <!-- page level plugin styles -->
    <link rel="stylesheet" href="/Content/vendor/offline/theme.css">
    <link rel="stylesheet" href="/Content/vendor/pace/theme.css">
    <!-- /page level plugin styles -->
    <!-- core styles -->
    <link rel="stylesheet" href="/Content/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Content/css/animate.min.css">
    <!-- /core styles -->
    <!-- template styles -->
    <link rel="stylesheet" href="/Content/css/skins/palette.1.css" id="skin">
    <link rel="stylesheet" href="/Content/css/fonts/style.1.css" id="font">
    <link rel="stylesheet" href="/Content/css/main.css">
    <!-- template styles -->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- load modernizer -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<!-- body -->
<body>
    <div class="app">
        <!-- top header -->
        <header class="header header-fixed navbar">
            <div class="brand">
                <a href="javascript:;" class="fa fa-bars off-left visible-xs" data-toggle="off-canvas" data-move="ltr"></a>
                <a href="index.html" class="navbar-brand text-white">
                    <i class="fa fa-stop mg-r-sm"></i>
                    <span class="heading-font">
                        Title Goes Here
                    </span>
                </a>
            </div>
            @Html.Partial("_LoginPartial")
        </header>
        <!-- /top header -->
        <section class="layout">
            <!-- sidebar menu -->
            <aside class="sidebar canvas-left">
                <!-- main navigation -->
                <nav class="main-navigation">
                    @{
                        Html.RenderPartial("Navigation/MainNavigation");
                    }
                    <hr />
                    @{
                        Html.RenderPartial("Navigation/UserManagementNavigation");
                    }
                </nav>
                <!-- /main navigation -->
            </aside>
            <!-- /sidebar menu -->
            <!-- main content -->
            <section class="main-content">
                <!-- content wrapper -->
                @RenderBody()
                <!-- /content wrapper -->
            </section>
            <!-- /main content -->
        </section>
    </div>
    <!-- core scripts -->
    <script src="/Content/vendor/jquery-1.11.1.min.js"></script>
    <script src="/Content/vendor/jquery.easing.min.js"></script>
    <script src="/Content/vendor/jquery.placeholder.js"></script>
    <script src="/Content/vendor/fastclick.js"></script>
    <script src="/Scripts/off-canvas.js"></script>
    <script src="/Scripts/main.js"></script>
    <!-- /core scripts -->
    <!-- page level scripts -->
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
    <!-- /page level scripts -->
</body>
<!-- /body -->
</html>